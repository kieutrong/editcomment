<% provide :title, @user.name %>
<div class="container">
  <h1 class = "gravatar-for-user">
    <%= gravatar_for @user %>
    <%= @user.name %>
  </h1>
</div>
<div class=" posts-all">
  <% if @user.posts.any? %>
    <h1><%= t ".microposts" %>(<%= @user.posts.count %>)</h1>
    <ol class="posts">
      <%= render @posts %>
    </ol>
    <%= paginate @posts, theme: "twitter-bootstrap-3" %>
  <% end %>
</div>
